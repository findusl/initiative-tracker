<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="viewModel" type="de.lehrbaum.initiativetracker.CombatantViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        is_selected="@{viewModel.selected}"
        android:background="@color/initiative_item_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="@{viewModel.selected ? View.GONE : View.VISIBLE}">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1"
                android:text="@{viewModel.name}"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Skeleton" />

            <TextView
                android:id="@+id/initiative_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@{viewModel.initiativeString}"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="10" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="@{viewModel.selected ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_control_size"
                android:minWidth="@dimen/min_control_size"
                android:layout_margin="@dimen/text_margin"
                android:autofillHints="name"
                android:hint="@string/name_edit_hint"
                android:inputType="textPersonName"
                android:text="@{viewModel.name}"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintEnd_toStartOf="@+id/initiative_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="DuplicateSpeakableTextCheck"
                tools:text="Skeleton" />

            <EditText
                android:id="@+id/initiative_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_control_size"
                android:minWidth="@dimen/min_control_size"
                android:maxWidth="@dimen/min_control_size"
                android:layout_margin="@dimen/text_margin"
                android:autofillHints="no"
                android:hint="@string/initiative_edit_hint"
                android:inputType="numberDecimal"
                android:text="@{viewModel.initiativeString}"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintBottom_toBottomOf="@+id/name_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name_edit"
                tools:ignore="DuplicateSpeakableTextCheck"
                tools:text="10" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_control_size"
                android:minWidth="@dimen/min_control_size"
                android:text="@string/cancel_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/save_button"
                app:layout_constraintTop_toBottomOf="@+id/name_edit" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_control_size"
                android:minWidth="@dimen/min_control_size"
                android:text="@string/save_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cancel_button"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_edit" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>

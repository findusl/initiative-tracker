<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CombatHostFragment">

    <fragment
        android:id="@+id/CombatHostFragment"
        android:name="de.lehrbaum.initiativetracker.view.combat.host.CombatHostFragment"
        android:label="@string/combat_host_fragment"
        tools:layout="@layout/fragment_combat_host">

        <action
            android:id="@+id/action_CombatHostFragment_to_CombatClientFragment"
            app:destination="@id/CombatClientFragment" />
        <action
            android:id="@+id/action_CombatHostFragment_to_combatantFragment"
            app:destination="@id/EditCombatantFragment" />
        <action
            android:id="@+id/action_CombatHostFragment_to_characterListFragment"
            app:destination="@id/characterListFragment" />
    </fragment>

    <fragment
        android:id="@+id/CombatClientFragment"
        android:name="de.lehrbaum.initiativetracker.view.combat.client.CombatClientFragment"
        android:label="@string/combat_client_fragment"
        tools:layout="@layout/fragment_combat_client">

        <argument
            android:name="sessionId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/EditCombatantFragment"
        android:name="de.lehrbaum.initiativetracker.view.combat.edit.EditCombatantFragment"
        android:label="EditCombatantFragment" />

    <fragment
        android:id="@+id/characterListFragment"
        android:name="de.lehrbaum.initiativetracker.view.combat.characters.CharacterListFragment"
        android:label="CharacterListFragment">

        <action
            android:id="@+id/action_characterListFragment_to_editCharacterFragment"
            app:destination="@id/EditCharacterFragment"/>
    </fragment>

    <fragment
        android:id="@+id/EditCharacterFragment"
        android:name="de.lehrbaum.initiativetracker.view.combat.characters.EditCharacterFragment"
        android:label="EditCharacterFragment">

        <argument
            android:name="characterId"
            app:argType="long" />
    </fragment>

</navigation>
